<header class="text-black px-4 md:px-8 xl:px-0 h-full flex justify-center items-start flex-col {{ header.bg-color }} {{ header.content-color }}">
  <div class="mx-auto w-[87.5vw] max-w-[1680px] pt-32 md:pt-72 pb-24 md:pb-44">
    <h1 class="text-7xl leading-tight mb-6 w-full md:w-[75%]">{{ header.title }}</h1>
    <p class="text-base md:text-lg w-full md:w-[75%]">{{ header.paragraphe }}</p>
    
    <div class="mt-8 md:mt-12 flex flex-wrap gap-4 md:gap-8">
      <a class="border border-red hover:bg-white hover:text-black transition-all duration-300 px-6 md:px-8 py-3 md:py-4" href="#">{{ header.button1.text }}</a>
      <a class="border-b border-red transition-all duration-300 px-3 md:px-4 py-2" href="/a-propos">{{ header.button2.text }}</a>
    </div>

    <section class="min-h-min flex flex-col gap-8 pt-12 md:pt-20 pb-12 md:pb-16">
      <div class="w-full md:max-w-screen-xl">
        <h2 class="font-serif text-2xl md:text-3xl md:w-[58%] text-red">Iels nous font confiance</h2>
        <div class="flex flex-wrap gap-8 md:gap-12 mt-8 md:mt-12">
          <img class="h-12 md:h-16 w-auto" src="/assets/images/collaborations/Cultureghem.svg" alt="Cultureghem">
          <img class="h-12 md:h-16 w-auto" src="/assets/images/collaborations/FoodWin.svg" alt="FoodWin">
          <img class="h-12 md:h-16 w-auto" src="/assets/images/collaborations/horsentier.svg" alt="Hors entier">
          <img class="h-12 md:h-16 w-auto" src="/assets/images/collaborations/Vub.svg" alt="VUB">
        </div>
      </div>
    </section>
  </div>
</header>