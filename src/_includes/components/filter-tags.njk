<div class="mb-12">
  <h2 class="text-base md:text-lg mb-4">Filtrer par tag :</h2>
  <div class="flex flex-wrap gap-2">
    <button 
      class="text-sm md:text-base border border-red px-3 md:px-4 py-1 md:py-2 hover:bg-red hover:text-black transition-colors filter-tag {% if not activeTag %}bg-red text-black{% endif %}"
      data-tag="all">
      Tous
    </button>
    {% for tag in tags %}
      <button 
        class="text-sm md:text-base border border-red px-3 md:px-4 py-1 md:py-2 hover:bg-red hover:text-black transition-colors filter-tag {% if tag === activeTag %}bg-red text-black{% endif %}"
        data-tag="{{ tag }}">
        {{ tag }}
      </button>
    {% endfor %}
  </div>
</div>