<header class="text-black px-8 xl:px-0 h-full md:h-[95vh] flex justify-center items-start flex-col bg-main-header-mobile sm:bg-main-header {{ header['bg-color'] }} {{ header['content-color'] }}">
  <div class="md:-mt-42 md:w-[87.5vw] md:max-w-[1680px] mx-auto w-full pb-20 pt-12 md:pt-72 md:pb-44">
    <h3 class="font-sans text-xl mb-8">{{ header.surTitre }}</h3>
      <h1 class="md:max-w-[75%] w-full text-3xl md:text-8xl leading-tight">{{ header.title }}</h1>

      <p class="text-base md:text-lg w-full md:w-[75%]"> {{ header.paragraphe }}</p> 
   
    <div data-scroll class="mt-12 flex flex-wrap gap-8">
      {% if header.button1 %}
        <a class="border border-red hover:bg-white hover:text-black transition-all duration-300 px-6 md:px-8 py-3 md:py-4 {{ header.button1.border }}" href="{{ header.button1.href }}">
          {% if header.button1.icon == "phone" %}
            <i class="icon-phone"></i>
          {% else if header.button1.icon == "email" %}
            <i class="icon-email"></i>
          {% endif %}
          {{ header.button1.text }}
        </a>
      {% endif %}

      {% if header.button2 %}
        <a class="border-b border-red transition-all duration-300 px-3 md:px-4 py-2 {{ header.button2.border }}" href="{{ header.button2.href }}">
          {% if header.button2.icon == "phone" %}
            <i class="icon-phone"></i>
          {% else if header.button2.icon == "email" %}
            <i class="icon-email"></i>
          {% endif %}
          {{ header.button2.text }}
        </a>
      {% endif %}

      {% if header.button3 %}
        <a class="bouton tertiary arrow" href="{{ header.button3.href }}">
          {% if header.button3.icon == "phone" %}
            <i class="icon-phone"></i>
          {% else if header.button3.icon == "email" %}
            <i class="icon-email"></i>
          {% endif %}
          {{ header.button3.text }}
        </a>
      {% endif %}

      {% if header.button4 %}
        <a class="bouton quater" href="{{ header.button4.href }}">
          {% if header.button4.icon == "phone" %}
            <i class="icon-phone"></i>
          {% else if header.button4.icon == "email" %}
            <i class="icon-email"></i>
          {% endif %}
          {{ header.button4.text }}
        </a>
      {% endif %}
    </div>
     {% if header.showArrow %}
    <div class="fleche is-down mt-12">
      <svg xmlns="http://www.w3.org/2000/svg" width="78" height="78" viewBox="0 0 78 78" fill="none">
        <path d="M38.1378 67.4394L15.7313 45.033C15.5028 44.8044 15.3744 44.4944 15.3744 44.1712C15.3744 43.848 15.5028 43.538 15.7313 43.3094C15.9599 43.0809 16.2699 42.9524 16.5931 42.9524C16.9164 42.9524 17.2263 43.0809 17.4549 43.3094L37.7801 63.6346L37.7801 11.4233C37.7801 11.0999 37.9086 10.7897 38.1373 10.561C38.366 10.3324 38.6762 10.2039 38.9996 10.2039C39.323 10.2039 39.6331 10.3324 39.8618 10.561C40.0905 10.7897 40.219 11.0999 40.219 11.4233L40.219 63.6346L60.5442 43.3094C60.7728 43.0809 61.0828 42.9524 61.406 42.9524C61.7292 42.9524 62.0392 43.0809 62.2678 43.3094C62.4964 43.538 62.6248 43.848 62.6248 44.1712C62.6248 44.4944 62.4964 44.8044 62.2678 45.033L39.8614 67.4394C39.6328 67.668 39.3228 67.7964 38.9996 67.7964C38.6763 67.7964 38.3663 67.668 38.1378 67.4394Z" fill="#1C1C1C"/>
      </svg>
    </div>
  {% endif %}
  </div>
</header>